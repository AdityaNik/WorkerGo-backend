model Worker {
  id              Int      @id @default(autoincrement())
  name            String?
  phone           String?
  skills          String[]
  location        String?
  availability    Boolean?
  registeredFrom  String?
  experinceLevel  String?
  previousJobs    Int[]
}

model Company {
  id                Int      @id @default(autoincrement())
  name              String
  email             String
  phone             String
  password          String
}

model Broker {
  id                Int      @id @default(autoincrement())
  name              String
  email             String
  phone             String
  password          String
}

model Job {
  id              Int      @id @default(autoincrement())
  jobTitle        String
  companyName     String
  locality        String
  startDate       DateTime
  totalDays       Int
  description     String
  need            Int
  fullfilled      Int
  salary          Int
  requiredSkills  String[]
}

model PreviousJobs {
  id          Int      @id @default(autoincrement())
  jobTitle    String
  companyName String
  startDate   DateTime
  endDate     DateTime
  description String
  location    String
  salary      Float
  workerId    Int
}


generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
